<h1>Create New Post</h1>
<!-- set url for the form to submit to create path from posts controller on click -->
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit 'Create Post', ({:class => 'button'}) %>
  </p>

<% end %>
